<Window x:Class="SolarSystem.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SolarSystem"
        mc:Ignorable="d"
        Title="Solar System" Height="450" Width="800" Background="Black">
    
    <Viewport3D x:Name="Viewport3D">
        <Viewport3D.Camera>
            <PerspectiveCamera Position="0 540 520" LookDirection="0 -1 -1" />
        </Viewport3D.Camera>
        <ModelVisual3D>
            <ModelVisual3D.Content>
                <DirectionalLight Direction="1, -1, -1" Color="White" />
            </ModelVisual3D.Content>
        </ModelVisual3D>
        <ModelVisual3D>
            <ModelVisual3D.Content>
                <AmbientLight Color="#1f1f1f"   />
            </ModelVisual3D.Content>
        </ModelVisual3D>
    </Viewport3D>
</Window>
